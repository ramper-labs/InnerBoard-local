# InnerBoard-local Environment Configuration
# Copy this file to .env and modify as needed

# Ollama Configuration
OLLAMA_MODEL=gpt-oss:20b
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=30

# Model Parameters
MAX_TOKENS=100000
MODEL_TEMPERATURE=0.7
MODEL_TOP_P=0.95

# Database Configuration
INNERBOARD_DB_PATH=vault.db
INNERBOARD_KEY_PATH=vault.key

# Security
INNERBOARD_KEY_PASSWORD=your_secure_password_here

# Logging
LOG_LEVEL=ERROR
# LOG_FILE=innerboard.log

# Network Safety
ALLOW_LOOPBACK=true
ALLOWED_PORTS=11434

# Performance
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600

# Development
# Set to DEBUG for more verbose logging during development
# LOG_LEVEL=DEBUG